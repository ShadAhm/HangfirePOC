@{
    ViewBag.Title = "Hangfire POC";
}

@model IEnumerable<HangfirePOC.Model.Activity>

<div class="row">
    <div class="col-md-12">
        <h2>Activities</h2>
        <table class="table">
            <tr>
                <th>
                    ID
                </th>
                <th>
                    Name
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.ID)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.ActionLink("Schedule", "Edit", new { id = item.ID }) 
                    </td>
                </tr>
            }

        </table>

    </div>
</div>